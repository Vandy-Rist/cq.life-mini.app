.index-nav{
  display: flex;
  flex-wrap: wrap;
}
.index-nav .nav-item{
  width: calc(100% / 3);
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
  font-size: 14px;
}

.index-nav .nav-item:nth-child(3n)::after {
  width: 0;
}
.index-nav image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.index-enter{
  display: flex;
  padding: 20rpx 30rpx;
}
.enter-item{
  width: 50%;
  display: flex;
  justify-content: center;
}
.index-enter image{
  width: 320rpx;
  height: 178rpx;
}

