/* 功能封装：
    1.给page设置背景色，
    2.给分区填充白色，
    3.再通过margin隔开  */
page {
  background-color: #f1f1f1;
}
.bgw {
  background-color: #fff;
}
.mt20 {
  margin-top: 20rpx;
}

/* 专门用于做间隔的类 */
.divider{
  height: 20rpx;
  background-color: #f1f1f1;
  box-shadow: 0 5rpx 5rpx rgb(0, 0, 0, 0.1) inset;
}

/* 细线边框  */
.bdr {
  position: relative;
}
.bdr::after {
  content: "";
  width: 1rpx;
  height: 100%;
  background-color: #ddd;
  position: absolute;
  right: 0;
  top: 0;
}

/* 水平垂直居中 */
.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 列表封装 */
.cell {
  font-size: 16px;
  background-color: #fff;
}
.cell-item {
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 30rpx;
}
/* 箭头 */
.arrow {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrow::after {
  content:"";
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #ddd;
  border-right: 3rpx solid #ddd;
  transform: rotate(45deg);
}

